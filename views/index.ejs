<html>
<head>
<title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
         $(document). ready(function (){
            var socket  = io.connect();

            $( 'button#blue').click(function (){
              socket.emit( "blue_button");
            });

            $( 'button#red').click(function (){
              socket.emit( "red_button");
            });

              socket.on( 'server_response', function (data){
                // console.log( 'Count: '  + data.number);
                $('span').text(data.number)
              });
        })
    </script>
</head>
<body>
    <h1>The button has been pushed <span>null</span> time(s)</h1>
    <p>Push the button to update the count</p>
    <button id="blue">Push the epic button</button>
    <br><br><br>
    <button id="red">Reset count</button>
</body>
</html>
